<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.verduleriaapp.controllers.GestionProveedoresController">
    <children>
        <VBox alignment="CENTER" spacing="20.0">
            <TableView fx:id="tablaProveedores">
                <columns>
                    <TableColumn fx:id="colId" text="ID" />
                    <TableColumn fx:id="colNombre" text="Nombre" />
                    <TableColumn fx:id="colContacto" text="Contacto" />
                    <TableColumn fx:id="colDireccion" text="Dirección" />
                </columns>
            </TableView>
            <HBox spacing="10.0" alignment="CENTER">
                <TextField fx:id="txtNombre" promptText="Nombre"/>
                <TextField fx:id="txtContacto" promptText="Contacto"/>
                <TextField fx:id="txtDireccion" promptText="Dirección"/>
                <Button text="Agregar Proveedor" onAction="#handleAgregarProveedor"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>