<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.verduleriaapp.controllers.GestionInventarioController"
            stylesheets="@../styles/main.css">

    <children>
        <Label layoutX="20.0" layoutY="20.0" text="Gestión de Inventario" />

        <!-- Tabla de inventario -->
        <TableView fx:id="tablaInventario" layoutX="20.0" layoutY="50.0" prefHeight="300.0" prefWidth="760.0">
            <columns>
                <TableColumn fx:id="colIdInventario" text="ID Inventario" prefWidth="180.0" />
                <TableColumn fx:id="colIdProducto" text="ID Producto" prefWidth="180.0" />
                <TableColumn fx:id="colStock" text="Stock" prefWidth="180.0" />
            </columns>
        </TableView>

        <!-- Campos para añadir o editar inventario -->
        <Label layoutX="20.0" layoutY="370.0" text="Producto:" />
        <ComboBox fx:id="comboProductos" layoutX="100.0" layoutY="365.0" prefWidth="200.0" promptText="Selecciona un producto" />

        <Label layoutX="350.0" layoutY="370.0" text="Stock:" />
        <TextField fx:id="txtStock" layoutX="420.0" layoutY="365.0" prefWidth="120.0" promptText="Cantidad en stock" />

        <!-- Botones -->
        <Button fx:id="btnAgregar" layoutX="20.0" layoutY="430.0" text="Agregar/Actualizar" onAction="#handleAgregarOActualizar" />
