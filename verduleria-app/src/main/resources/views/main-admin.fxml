<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="763.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.verduleriaapp.controllers.MainAdminController">
    <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #2C3E50; -fx-pref-width: 220; -fx-padding: 20;">
        <Label prefHeight="65.0" prefWidth="141.0" style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;" text="Verdulería Admin" />

        <Button style="-fx-pref-width: 180; -fx-background-color: #34495E; -fx-text-fill: white;" text="Inicio" />

        <Label style="-fx-text-fill: #BDC3C7; -fx-font-weight: bold; -fx-padding: 10 0 5 0;" text="Gestión de Productos" />
        <Button onAction="#loadProductPane" style="-fx-pref-width: 180; -fx-background-color: #34495E; -fx-text-fill: white;" text="Productos" />
        <Button onAction="#loadCategoryPane" style="-fx-pref-width: 180; -fx-background-color: #34495E; -fx-text-fill: white;" text="Categorías" />
        <Button onAction="#loadInventoryPane" style="-fx-pref-width: 180; -fx-background-color: #34495E; -fx-text-fill: white;" text="Inventario" />

        <Label style="-fx-text-fill: #BDC3C7; -fx-font-weight: bold; -fx-padding: 10 0 5 0;" text="Gestión de Transacciones" />
        <Button onAction="#loadSalesPane" style="-fx-pref-width: 180; -fx-background-color: #34495E; -fx-text-fill: white;" text="Ventas" />
        <Button onAction="#loadPurchasesPane" style="-fx-pref-width: 180; -fx-background-color: #34495E; -fx-text-fill: white;" text="Compras" />
        <Button onAction="#loadReturnsPane" style="-fx-pref-width: 180; -fx-background-color: #34495E; -fx-text-fill: white;" text="Devoluciones" />

        <Label style="-fx-text-fill: #BDC3C7; -fx-font-weight: bold; -fx-padding: 10 0 5 0;" text="Gestión de Entidades" />
        <Button onAction="#loadClientsPane" style="-fx-pref-width: 180; -fx-background-color: #34495E; -fx-text-fill: white;" text="Clientes" />
        <Button onAction="#loadSuppliersPane" style="-fx-pref-width: 180; -fx-background-color: #34495E; -fx-text-fill: white;" text="Proveedores" />
        <Button onAction="#loadUsersPane" style="-fx-pref-width: 180; -fx-background-color: #34495E; -fx-text-fill: white;" text="Usuarios" />

        <Label style="-fx-text-fill: #BDC3C7; -fx-font-weight: bold; -fx-padding: 10 0 5 0;" text="Reportes y Alertas" />
        <Button onAction="#loadReportsPane" style="-fx-pref-width: 180; -fx-background-color: #34495E; -fx-text-fill: white;" text="Reportes" />
        <Button onAction="#loadAlertsPane" style="-fx-pref-width: 180; -fx-background-color: #34495E; -fx-text-fill: white;" text="Alertas" />
        <Button onAction="#loadExpensesPane" style="-fx-pref-width: 180; -fx-background-color: #34495E; -fx-text-fill: white;" text="Gastos" />

        <Button onAction="#logout" style="-fx-pref-width: 180;" text="Salir" />
    </VBox>

    <AnchorPane layoutX="210.0" prefHeight="763.0" prefWidth="397.0" fx:id="MainPane">
        <Label fx:id="lblTotalVentas" layoutX="20.0" layoutY="20.0" text="Total Ventas: " />
        <Label fx:id="lblTotalCompras" layoutX="20.0" layoutY="60.0" text="Total Compras: " />
        <Label fx:id="lblProductoMasVendido" layoutX="20.0" layoutY="100.0" text="Producto Más Vendido: " />
        <Label fx:id="lblProductoMasComprado" layoutX="20.0" layoutY="140.0" text="Producto Más Comprado: " />
        <Label fx:id="lblTotalProductos" layoutX="20.0" layoutY="180.0" text="Total Productos: " />
        <Label fx:id="lblTotalCategorias" layoutX="20.0" layoutY="220.0" text="Total Categorías: " />
        <Label fx:id="lblTotalClientes" layoutX="20.0" layoutY="260.0" text="Total Clientes: " />
        <Label fx:id="lblTotalProveedores" layoutX="20.0" layoutY="300.0" text="Total Proveedores: " />
        <Label fx:id="lblTotalUsuarios" layoutX="20.0" layoutY="340.0" text="Total Usuarios: " />
        <Label fx:id="lblPromedioVentas" layoutX="20.0" layoutY="380.0" text="Promedio Ventas: " />
        <Label fx:id="lblPromedioCompras" layoutX="20.0" layoutY="420.0" text="Promedio Compras: " />
    </AnchorPane>
</AnchorPane>
