<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.verduleriaapp.controllers.GestionOrdenesDeCompraController"
            stylesheets="@../styles/main.css">

    <children>
        <Label layoutX="20.0" layoutY="20.0" text="Gestión de Órdenes de Compra" />

        <!-- Tabla para mostrar las órdenes de compra -->
        <TableView fx:id="tablaOrdenesCompra" layoutX="20.0" layoutY="50.0" prefHeight="300.0" prefWidth="760.0">
            <columns>
                <TableColumn fx:id="colNumeroOrden" text="ID Orden" prefWidth="150.0" />
                <TableColumn fx:id="colIdProveedor" text="ID Proveedor" prefWidth="150.0" />
                <TableColumn fx:id="colFecha" text="Fecha" prefWidth="200.0" />
                <TableColumn fx:id="colEstado" text="Estado" prefWidth="200.0" />
            </columns>
        </TableView>

        <!-- Campos para rellenar datos de la orden -->
        <Label layoutX="20.0" layoutY="370.0" text="Proveedor:" />
        <ComboBox fx:id="comboProveedores" layoutX="100.0" layoutY="365.0" prefWidth="200.0" promptText="Selecciona un proveedor" />

        <Label layoutX="20.0" layoutY="410.0" text="Fecha:" />
        <DatePicker fx:id="pickerFecha" layoutX="100.0" layoutY="405.0" prefWidth="200.0" />

        <Label layoutX="350.0" layoutY="370.0" text="Estado:" />
        <TextField fx:id="txtEstado" layoutX="420.0" layoutY="365.0" prefWidth="200.0" promptText="Ej. Pendiente, Completado" />

        <!-- Botones -->
        <Button fx:id="btnAgregar" layoutX="20.0" layoutY="460.0" text="Agregar Orden" onAction="#handleAgregar"/>
        <Button fx:id="btnActualizar" layoutX="130.0" layoutY="460.0" text="Actualizar Orden" onAction="#handleActualizar"/>
        <Button fx:id="btnEliminar" layoutX="250.0" layoutY="460.0" text="Eliminar Orden" onAction="#handleEliminar"/>
        <Button fx:id="btnLimpiar" layoutX="370.0" layoutY="460.0" text="Limpiar Formulario" onAction="#limpiarFormulario"/>
    </children>
</AnchorPane>