<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="anchorPaneProveedores" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.verduleriaapp.controllers.GestionProveedoresController">
    <children>
        <TableView fx:id="tablaProveedores" layoutX="20" layoutY="20" prefHeight="300" prefWidth="600">
            <columns>
                <TableColumn fx:id="colId" text="ID Proveedor" />
                <TableColumn fx:id="colNombre" text="Nombre" />
                <TableColumn fx:id="colContacto" text="Contacto" />
                <TableColumn fx:id="colDireccion" text="Dirección" />
            </columns>
        </TableView>
        <VBox layoutX="20" layoutY="340" spacing="10">
            <TextField fx:id="txtNombre" promptText="Nombre" />
            <TextField fx:id="txtContacto" promptText="Contacto" />
            <TextField fx:id="txtDireccion" promptText="Dirección" />
            <HBox spacing="10">
                <Button text="Agregar" onAction="#onAgregarProveedor"/>
                <Button text="Editar" onAction="#onEditarProveedor"/>
                <Button text="Eliminar" onAction="#onEliminarProveedor"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>